{
    "compilerOptions": {
        "rootDir": "./src",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "./dist",
        "noEmitOnError": true,
        "declaration": true,
        "lib": [
            "es6",
            "es2017.object"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
